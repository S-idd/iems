{
  "info": {
    "name": "IEMS API Collection",
    "description": "Complete API collection for Inclusive Education Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "schoolId",
      "value": "",
      "type": "string"
    },
    {
      "key": "studentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has username\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.username).to.eql('admin');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\",\n  \"email\": \"admin@iems.com\",\n  \"firstName\": \"Admin\",\n  \"lastName\": \"User\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
                  "",
                  "pm.test(\"Has access token\", function () {",
                  "    pm.expect(jsonData.accessToken).to.be.a('string');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Schools",
      "item": [
        {
          "name": "Create School",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"schoolId\", jsonData.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Inclusive High School\",\n  \"address\": \"123 Main Street\",\n  \"city\": \"Springfield\",\n  \"state\": \"IL\",\n  \"zipCode\": \"62701\",\n  \"country\": \"USA\",\n  \"phone\": \"555-0123\",\n  \"email\": \"info@inclusivehigh.edu\",\n  \"establishedYear\": 1990,\n  \"studentCapacity\": 1000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/schools",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools"]
            }
          }
        },
        {
          "name": "Get All Schools",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/schools/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools", "active"]
            }
          }
        },
        {
          "name": "Get School By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/schools/{{schoolId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schools", "{{schoolId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Students",
      "item": [
        {
          "name": "Register Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"studentId\", jsonData.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"student1\",\n  \"password\": \"student123\",\n  \"email\": \"student1@school.com\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"role\": \"STUDENT\",\n  \"schoolId\": {{schoolId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Get All Students",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/students",
              "host": ["{{baseUrl}}"],
              "path": ["api", "students"]
            }
          }
        }
      ]
    },
    {
      "name": "Scholarships",
      "item": [
        {
          "name": "Create Scholarship Application",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scholarshipName\": \"Merit Scholarship 2024\",\n  \"studentId\": {{studentId}},\n  \"amountRequested\": 5000.00,\n  \"purpose\": \"Tuition and books\",\n  \"justification\": \"High academic performance and financial need\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/scholarships",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scholarships"]
            }
          }
        },
        {
          "name": "Get Pending Scholarships",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/scholarships?status=PENDING",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scholarships"],
              "query": [
                {
                  "key": "status",
                  "value": "PENDING"
                }
              ]
            }
          }
        },
        {
          "name": "Approve Scholarship",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/scholarships/1/approve?approvedAmount=4500.00&comments=Approved",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scholarships", "1", "approve"],
              "query": [
                {
                  "key": "approvedAmount",
                  "value": "4500.00"
                },
                {
                  "key": "comments",
                  "value": "Approved"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Accessibility",
      "item": [
        {
          "name": "Create Accessibility Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": {{studentId}},\n  \"schoolId\": {{schoolId}},\n  \"title\": \"Wheelchair Accessibility Issue\",\n  \"description\": \"Ramp is too steep at main entrance\",\n  \"relatedDisability\": \"PHYSICAL\",\n  \"severity\": \"HIGH\",\n  \"location\": \"Main Building Entrance\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/accessibility/reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accessibility", "reports"]
            }
          }
        },
        {
          "name": "Get Unresolved Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/accessibility/reports/unresolved",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accessibility", "reports", "unresolved"]
            }
          }
        }
      ]
    }
  ]
}
